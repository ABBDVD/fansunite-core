{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      2
    ],
    "max-len": [
      "error",
      99
    ],
    "no-empty-blocks": [
      "off"
    ],
    "security/no-inline-assembly": [
      "off"
    ],
    "no-unused-vars": [
      "warning"
    ],
    "no-experimental": [
      "off"
    ]
  }
}
